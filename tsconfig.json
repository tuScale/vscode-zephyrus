{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true, 
		"noImplicitReturns": true, 
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true
	},
	"exclude": [
		".vscode-test",
		"node_modules",
		"test-resources"
	]
}
